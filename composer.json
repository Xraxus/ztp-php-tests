{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Test\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@phpcs-scripts",
            "@phpcs",
            "@phpcbf"
        ],
        "post-update-cmd": [
            "@phpcs-scripts",
            "@phpcs",
            "@phpcbf"
        ],
        "phpcs-scripts": [
            "vendor/bin/phpcs --config-set installed_paths $(realpath vendor/escapestudios/symfony2-coding-standard)",
            "vendor/bin/phpcs --config-set default_standard Symfony"
        ],
        "phpcs": "vendor/bin/phpcs --standard=Symfony --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "phpcbf": "vendor/bin/phpcbf --standard=Symfony --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.4",
        "escapestudios/symfony2-coding-standard": "^3.8",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpmd/phpmd": "^2.6"
    }
}
